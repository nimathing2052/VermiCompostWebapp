<!DOCTYPE html>
<html>
<head>
    <title>Chandragiri VermiCompost : @ViewBag.Title</title>

    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="container col-lg-10">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <h1 class="navbar-brand"><i class="fa fa-paint-brush"></i> Welcome to Chandragiri VermiCompost</h1>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
        <div id="theMenu" class="navbar-collapse collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="App" asp-action="Index">Home</a>
                </li>
                <li class="navbar-nav">
                    <a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="App" asp-action="About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="App" asp-action="Shop">Shop</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                }

            </ul>
        </div>
            </nav>
    </header>
    <section class="container">
        <h2 class="text-center">@ViewBag.Title</h2>
        @RenderBody()
        <hr />
        <footer>
            <div class="footer">
                <div class="row">
                    <div class="col-md-12 copyright">

                        <div class="col-md-12 col-sm-6 copyright">
                            <p>&copy; @DateTime.Now.Year - Chandragiri VermiCompost Pvt. Ltd.</p>
                        </div>

                        <div class="col-md-12 justify-content-lg-center copyright">

                            <ul class="list-unstyled list-social">
                                <li><h5><a href="#" target="_blank"><i class="fa fa-facebook-square"> www.facebook.com/chandragirivermicompost</i></a></h5></li>
                                <li><i class="fa fa-mobile-phone" style="font-size:36px"> 9861343857</i></li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </section>



    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>